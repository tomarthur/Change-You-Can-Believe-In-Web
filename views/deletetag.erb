
    <div class="container">
    
      <div class="alert alert-block">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4>Warning!</h4>
  You are about to delete a trinket. There is no undo.
</div>

      
      <div class="container">

      <form form action="../deletegonetag" method="POST" class="form-horizontal">
                
         <div class="control-group">
        <label class="control-label" for="tag">Tag to Delete</label>
        <div class="controls">
	      <select name="tagdel">
	      <% for thistag in @tags %>
	      <option>
	      <%= thistag.name%>
	      </option>
	      <%end%>
	      </select>
         </div>
         </div>

	      
        <div class"control-group">
        <div class="controls">
	  <button class="btn btn-large btn-danger" type="submit">Delete Tag Forever</button>
        </div>
        </div>
      </form>

    </div> 
    
  
  