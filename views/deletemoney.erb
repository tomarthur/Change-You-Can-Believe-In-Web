
    <div class="container">
    
      <div class="alert alert-block">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4>Warning!</h4>
  You are about to delete a savings entry. There is no undo.
</div>

      
      <div class="container">

      <form form action="../deletegonesave" method="POST" class="form-horizontal">
                
         <div class="control-group">
        <label class="control-label" for="date">Savings entry to Delete</label>
        <div class="controls">
	      <select name="date">
	      <% for thissavings in @money %>
	      <option>
	      <%= thissavings.created_at%> 
	      </option>
	      <%end%>
	      </select>
         </div>
         </div>

	      
        <div class"control-group">
        <div class="controls">
	  <button class="btn btn-large btn-danger" type="submit">Delete Savings Entry Forever</button>
        </div>
        </div>
      </form>

    </div> 
    
  
  